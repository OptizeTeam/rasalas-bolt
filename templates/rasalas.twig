{% extends '_base/_page-nav.twig' %}

{% block page_title %}
    TAP4CALL - Ustawienia
{% endblock %}


{% block page_main %}
    <form method="POST">
        <div class="col-md-8">
            {% for message in app.session.getFlashBag.get('rasalas') %}
                <div class="alert alert-{{ message.type }} alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    {{ message.message }}
                </div>
            {% endfor %}
            <label for="rasalas_script_id">tap4call id:</label>
            <input id="rasalas_script_id" class="form-control" placeholder="tap4call id" name="rasalas_script_id" value="{{ id }}">
        </div>
        <aside class="col-md-4">
            <div class="panel panel-default panel-news">
                <div class="panel-heading">
                    <i class="fa fa-fw fa-cog"></i>
                    Akcje
                </div>

                <div class="panel-body">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-edit"></i> Zapisz
                    </button>
                </div>
            </div>
        </aside>
    </form>
{% endblock %}
